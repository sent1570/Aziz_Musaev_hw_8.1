<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F8"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="230dp"
        android:text="Current Policies"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:text="Policies"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#405260"
        android:paddingHorizontal="22dp"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:drawableStart="@drawable/ic_baseline_dehaze_24"
        android:drawableLeft="@drawable/ic_baseline_dehaze_24"
        />
    <EditText
        android:id="@+id/policy"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="260dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:hint="Policy"
        android:inputType="number"
        android:background="@drawable/as"
        android:paddingRight="10dp"
        android:paddingLeft="22dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#6C6C6C"
        android:textColorHint="#6C6C6C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/product_category"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="160dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:hint="Product category"
        android:inputType="number"
        android:background="@drawable/as"
        android:paddingRight="10dp"
        android:paddingLeft="22dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#6C6C6C"
        android:textColorHint="#6C6C6C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/origin_country"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="60dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:hint="Origin country"
        android:inputType="textPersonName"
        android:background="@drawable/as"
        android:paddingRight="10dp"
        android:paddingLeft="22dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#6C6C6C"
        android:textColorHint="#6C6C6C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/brand"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:hint="Brand"
        android:inputType="textPersonName"
        android:background="@drawable/as"
        android:paddingRight="10dp"
        android:paddingLeft="22dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#6C6C6C"
        android:textColorHint="#6C6C6C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/export_as_CSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="160dp"
        app:backgroundTint="@color/gray"
        android:background="@drawable/bg"
        android:textAllCaps="false"
        android:text="Export as CSV"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:paddingHorizontal="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="Country of origin"
        android:textStyle="bold"
        android:background="@color/white"
        android:paddingHorizontal="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="Product Category"
        android:textStyle="bold"
        android:background="@color/white"
        android:paddingHorizontal="20dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="138dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="166dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="194dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="222dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="278dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="306dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />










</androidx.constraintlayout.widget.ConstraintLayout>